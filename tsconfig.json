{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@renderer/*": ["src/renderer/*"],
      "@db/*": ["src/db/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src"]
}
