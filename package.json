{
  "name": "nexo-employees",
  "version": "0.1.0",
  "private": true,
  "description": "Electron app to sync ZKTeco attendance with ERPNext (offline-first)",
  "main": "dist-electron/main.cjs",
  "type": "commonjs",
  "author": "",
  "license": "MIT",
  "scripts": {
  "dev": "concurrently -k \"node scripts/build-electron.mjs --watch\" \"vite\" \"wait-on tcp:5173 && cross-env VITE_DEV_SERVER=true electron .\"",
  "build": "node scripts/build-electron.mjs && vite build && electron-builder",
  "build:win": "node scripts/build-electron.mjs && vite build && electron-builder --win",
  "build:app": "vite build",
  "lint": "echo 'no linter configured'"
},
  "dependencies": {
    "@tanstack/react-query": "^5.90.12",
    "better-sqlite3": "^11.10.0",
    "electron-store": "^8.1.0",
    "frappe-react-sdk": "^1.12.0",
    "is-online": "^12.0.1",
    "lucide-react": "^0.561.0",
    "node-zklib": "^1.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.5.1",
    "swr": "^2.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^32.3.3",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.10",
    "esbuild-node-externals": "^1.18.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^5.4.20",
    "wait-on": "^8.0.5"
  },
  "build": {
  "appId": "com.nexo.employees",
  "icon": "build/icon.png",
  "files": [
      "**/*"
  ],
  "asarUnpack": [
    "**/*.node"
  ],
  "extraResources": [
    {
      "from": "data/",
      "to": "data/",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": ["portable"],
    "artifactName": "nexo-employees_${version}_${arch}.${ext}"
  },
  "npmRebuild": false,
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false
}
}
